{
  "watch": ["src"],
  "ext": "ts,js,json",
  "ignore": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "node_modules",
    "dist",
    "./logs/**/*",
    "uploads",
    "storage"
  ],
  "exec": "ts-node src/simple-app.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000,
  "verbose": true,
  "restartable": "rs",
  "colours": true,
  "legacyWatch": false,
  "signal": "SIGTERM",
  "killTimeout": 5000
}
